<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:scrollbars="none">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?actionBarSize">
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:orientation="vertical"
       android:background="@drawable/sharp_corner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:paddingTop="10dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_tmp"
               android:textSize="36sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               android:text="...°"/>
           <TextView
               android:id="@+id/tv_fl"
               android:textSize="16sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_tmp"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="12dp"
               android:text="体感温度：..."/>
           <TextView
               android:id="@+id/tv_txt"
               android:textSize="25sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="..."/>
           <ImageView
               android:id="@+id/iv_icon"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_centerVertical="true"
               android:paddingRight="12dp"
               android:src="@drawable/none"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>

       <LinearLayout
           android:paddingTop="60dp"
           android:paddingBottom="15dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_dir"
                   android:textSize="12sp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="..."/>
               <TextView
                   android:id="@+id/tv_sc"
                   android:textSize="24sp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/tv_dir"
                   android:text="...级"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/hum"
                   android:textSize="12sp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="相对湿度"/>
               <TextView
                   android:id="@+id/tv_hum"
                   android:textSize="24sp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/hum"
                   android:text="...%"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/vis"
                   android:textSize="12sp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="能见度"/>
               <TextView
                   android:id="@+id/tv_vis"
                   android:textSize="24sp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/vis"
                   android:text="..km"/>
           </RelativeLayout>
       </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/sharp_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_day1Icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/none"/>
            <TextView
                android:id="@+id/day1Cond"
                android:textSize="22sp"
                android:layout_toRightOf="@id/iv_day1Icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"/>
            <TextView
                android:id="@+id/tv_day1Cond"
                android:layout_below="@id/day1Cond"
                android:layout_alignLeft="@id/day1Cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
            <TextView
                android:id="@+id/tv_day1Tmp"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...°/...°"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_day2Icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/none"/>
            <TextView
                android:id="@+id/day2Cond"
                android:textSize="22sp"
                android:layout_toRightOf="@id/iv_day2Icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"/>
            <TextView
                android:id="@+id/tv_day2Cond"
                android:layout_below="@id/day2Cond"
                android:layout_alignLeft="@id/day2Cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
            <TextView
                android:id="@+id/tv_day2Tmp"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...°/...°"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_day3Icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/none"/>
            <TextView
                android:id="@+id/day3Cond"
                android:textSize="22sp"
                android:layout_toRightOf="@id/iv_day3Icon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后天"/>
            <TextView
                android:id="@+id/tv_day3Cond"
                android:layout_below="@id/day3Cond"
                android:layout_alignLeft="@id/day3Cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
            <TextView
                android:id="@+id/tv_day3Tmp"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...°/...°"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sharp_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/qlty"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气质量"/>
            <TextView
                android:id="@+id/tv_qlty"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:layout_below="@id/qlty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/aqi"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气质量指数"/>
            <TextView
                android:id="@+id/aqi1"
                android:layout_marginTop="5dp"
                android:layout_below="@id/aqi"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AQI"/>
            <TextView
                android:id="@+id/tv_aqi"
                android:layout_below="@id/aqi1"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pm25"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主要污染物"/>
            <TextView
                android:id="@+id/pm251"
                android:layout_below="@id/pm25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"/>
            <TextView
                android:id="@+id/tv_pm25"
                android:textSize="24sp"
                android:layout_below="@id/pm251"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/sharp_corner"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议"/>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dbrf"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="穿衣指数:"/>
            <TextView
                android:id="@+id/tv_dbrf"
                android:textSize="16sp"
                android:layout_toRightOf="@id/dbrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
            <TextView
                android:id="@+id/tv_dtxt"
                android:layout_below="@id/tv_dbrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="......"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sbrf"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动指数:"/>
            <TextView
                android:id="@+id/tv_sbrf"
                android:textSize="16sp"
                android:layout_toRightOf="@id/sbrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
            <TextView
                android:id="@+id/tv_stxt"
                android:layout_below="@id/tv_sbrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="......"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tbrf"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出行指数:"/>
            <TextView
                android:id="@+id/tv_tbrf"
                android:textSize="16sp"
                android:layout_toRightOf="@id/tbrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."/>
            <TextView
                android:id="@+id/tv_ttxt"
                android:layout_below="@id/tv_tbrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="......"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_update"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最后更新时间："/>
    <TextView
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据来源：和风天气，GUOLIN.TECH"/>
</LinearLayout>
</ScrollView>